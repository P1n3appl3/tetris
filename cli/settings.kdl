sound {
    volume 0.8
    meta {
        ready "https://ecdldaiiere.github.io/Eddiez-Soundz/TFready.mp3"
        go "https://ecdldaiiere.github.io/Eddiez-Soundz/TFgo.mp3"
        lose "https://ecdldaiiere.github.io/Eddiez-Soundz/TFdied.mp3"
    }
    action {
        move "https://ecdldaiiere.github.io/Eddiez-Soundz/TFmove.mp3"
        rotate "https://ecdldaiiere.github.io/Eddiez-Soundz/TF_rotate.mp3"
        lock "https://ecdldaiiere.github.io/Eddiez-Soundz/TFlock.mp3"
        hold "https://ecdldaiiere.github.io/Eddiez-Soundz/TFhold.mp3"
        spin "https://jstrisplus.github.io/jstris-plus-assets/sfxPacks/tetrio/spin.ogg"
    }
    clear {
        single "https://jstrisplus.github.io/jstris-plus-assets/sfxPacks/tetrio/clearline.ogg" 0.7
        quad "https://jstrisplus.github.io/jstris-plus-assets/sfxPacks/tetrio/clearquad.ogg" 0.7
        tspin "https://jstrisplus.github.io/jstris-plus-assets/sfxPacks/tetrio/clearspin.ogg" 0.7
    }
}
