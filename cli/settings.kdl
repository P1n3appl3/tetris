sound {
    volume 0.3
    ready #null
    move "https://s.jezevec10.com/res/se0/move.wav"
    rotate #null
    lock "https://s.jezevec10.com/res/se0/lock.wav"
    line "https://s.jezevec10.com/res/se0/linefall.wav"
    hold "https://s.jezevec10.com/res/se0/hold.wav"
    lose "https://s.jezevec10.com/res/se0/topout.wav"
    // win "path/to/win.wav"
    go #null
}
